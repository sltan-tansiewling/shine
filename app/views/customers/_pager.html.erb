<nav>
    <ul class="pagination justify-content-center">
        <% if page > 0 %>
            <li class="page-item">
                <%= link_to "&larr; Previous".html_safe,
                        customers_path(keywords: keywords, page: page - 1),
                        title: "Previous Page",
                        class: "page-link" %>
            </li>
        <% end %>
        <li class="page-item">
            <%= link_to "Next &rarr;".html_safe,
                customers_path(keywords: keywords, page: page + 1),
                title: "Next Page",
                class: "page-link" %>
        </li>
    </ul>
</nav>